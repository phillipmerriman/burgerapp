

<div class="container content">
    <h1>Eat Da Burger!</h1>

    <h2>Add a burger</h2>
    <form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" required placeholder="Add a burger!" id="ca" class="form-control" name="burger_name">
    </div>

    <button type="submit" class="btn btn-default">Add burger</button>
    </form>

    <div class="content-burger">
        {{#each burgers}} 
            <div class="content-burger__list" id={{id}}>
                <p>{{ burger_name }}</p>
                <button class="btn btn-default favorites" data-id="{{id}}" data-state="{{ devoured }}">
                    {{#if devoured}} undevour {{else}} Devour! {{/if}}
                </button>
            </div>
        {{/each}}
    </div>
</div>