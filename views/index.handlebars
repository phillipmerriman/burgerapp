<div class="container content">
    <h1>Eat Da Burger!</h1>

    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" required placeholder="Add a burger!" id="ca" class="form-control" name="burger_name">
        </div>

        <button type="submit" class="btn btn-default">Add burger</button>
    </form>

    <div class="row">

        <div class="col-md-6">

            <h2>These Are Ready To Be Devoured</h2>
            <div class="content-burger">
                {{#each burgers}}
                {{#unless devoured}}
                <div class="content-burger__list" id={{id}}>
                    <p>{{ burger_name }}</p>
                    <button class="btn btn-default favorites dev" data-id="{{id}}" data-state="{{ devoured }}">
                        {{#if devoured}} Remove Burger {{else}} Devour! {{/if}}
                    </button>
                </div>
                {{/unless}}
                {{/each}}

            </div>
        </div>

        <div class="col-md-6">

            <h2>These Have Been Devoured</h2>
            <div>
                {{#each burgers}}
                {{#if devoured}}
                <div class="content-burger__list" id={{id}}>
                    <p>{{ burger_name }}</p>
                    <button class="btn btn-default favorites del" data-id="{{id}}" data-state="{{ devoured }}">
                        {{#if devoured}} Remove Burger {{else}} Devour! {{/if}}
                    </button>
                </div>
                {{/if}}
                {{/each}}

            </div>
        </div>
    </div>

</div>